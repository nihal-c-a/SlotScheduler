@{
    ViewData["Title"] = "Add Washing Machine";
}

<div class="container mt-4">
    <h1 class="mb-4">Add Washing Machine</h1>

    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label for="machineName" class="form-label">Machine Name</label>
            <input type="text" name="machineName" id="machineName" class="form-control" required />
        </div>
        <div class="mb-3">
            <a href="@Url.Action("Index", "WashingMachine")" class="btn btn-dark ms-2">Back</a>
            <button type="submit" class="btn btn-primary align-self-end">Add</button>
            
        </div>
    </form>
</div>
