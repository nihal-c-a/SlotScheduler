@{
    ViewData["Title"] = "Admin Home";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #121212;
            color: #e0e0e0;
        }

        .container {
            background-color: #1e1e1e;
            border-radius: 8px;
            padding: 20px;
        }

        .card-custom {
            background-color: #2c2c2c;
            color: #e0e0e0;
            transition: transform 0.2s, box-shadow 0.2s;
        }

            .card-custom:hover {
                transform: translateY(-5px);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.4);
            }

        .btn-primary {
            background-color: #3f51b5;
            border-color: #3f51b5;
        }

            .btn-primary:hover {
                background-color: #303f9f;
                border-color: #303f9f;
            }

            .btn-primary:focus, .btn-primary.focus {
                box-shadow: 0 0 0 0.2rem rgba(63, 81, 181, 0.5);
            }
    </style>
</head>
<body>
    <div class="container mt-4">
        <div class="text-center mb-4">
            <h2>@ViewData["Title"]</h2>
        </div>
        <div class="row justify-content-center justify-content-sm-center">
            <div class="col-md-6 col-lg-4">
                <div class="card card-custom mb-3">
                    <div class="card-body text-center">
                        <h5 class="card-title">Tenants</h5>
                        <a href="@Url.Action("ManageTenants", "Admin")" class="btn btn-primary">Manage</a>
                    </div>
                </div>
                <div class="card card-custom mb-3">
                    <div class="card-body text-center">
                        <h5 class="card-title">Washing Machines</h5>
                        <a href="@Url.Action("AddWashingMachine", "Admin")" class="btn btn-primary">Manage</a>
                    </div>
                </div>
                <div class="card card-custom mb-3">
                    <div class="card-body text-center">
                        <h5 class="card-title">View Bookings</h5>
                        <a href="@Url.Action("ViewBookings", "Admin")" class="btn btn-primary px-4">View</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
